<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="DeliveryApp.UserAccountInfo">
    <StackLayout>
        <Button
            x:Name="userPhotoButton"
            Margin="0,10,0,0"
            HeightRequest="80"
            WidthRequest="80"
            CornerRadius="40"
            HorizontalOptions="Center"
            BorderColor="DarkGray"
            BorderWidth="1.0">
        </Button>
        <Label
            Text="Delivery Driver"
            TextColor="Black"
            FontSize="Large"
            HorizontalOptions="Center"></Label>
        <Label
            x:Name="deliveryOrganizations"
            HorizontalOptions="Center"></Label>
        <StackLayout
            Margin="50,20,0,0">
            <Label
                x:Name="numberOfDeliveries"></Label>
            <Label
                x:Name="startTime"></Label>
            <Label
                x:Name="totalHoursWorked"></Label>
            <Label
                x:Name="totalMilesDriven"></Label>
            <Label
                x:Name="endTime"></Label>
         </StackLayout>
    </StackLayout>
</ContentPage>
